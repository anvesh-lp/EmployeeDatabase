<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17"
            fx:controller="com.employee.controllers.EmployeeTermination">
    <children>
        <TextField fx:id="searchField" layoutX="147.0" layoutY="139.0" prefHeight="26.0" prefWidth="226.0"
                   promptText="Enter employe User Name" visible="false"/>
        <Label alignment="CENTER" contentDisplay="CENTER" layoutX="165.0" layoutY="29.0" prefHeight="27.0"
               prefWidth="256.0" text="Terminate Employee" textAlignment="CENTER">
            <font>
                <Font size="27.0"/>
            </font>
        </Label>
        <RadioButton fx:id="idRadioButton" layoutX="143.0" layoutY="90.0" mnemonicParsing="false"
                     onAction="#onUserRadio" text="Search By UserName"/>
        <RadioButton fx:id="usernameRadioButton" layoutX="336.0" layoutY="90.0" mnemonicParsing="false"
                     onAction="#onIdRadio" prefHeight="18.0" prefWidth="102.0" text="Search By Id"/>
        <TextArea fx:id="textAreaField" layoutX="40.0" layoutY="174.0" prefHeight="62.0" prefWidth="528.0"
                  visible="false"/>
        <Button fx:id="terminateButton" layoutX="242.0" layoutY="285.0" mnemonicParsing="false" onAction="#onTerminate"
                prefHeight="26.0" prefWidth="102.0" text="Terminate" visible="false"/>
        <Button fx:id="cancelButton" layoutX="466.0" layoutY="334.0" mnemonicParsing="false" onAction="#onCancel"
                prefHeight="26.0" prefWidth="102.0" text="Cancel"/>
        <Text fx:id="errorprompt" fill="#dd1818" layoutX="165.0" layoutY="263.0" strokeType="OUTSIDE" strokeWidth="0.0"
              text="text" textAlignment="CENTER" visible="false" wrappingWidth="256.0">
            <font>
                <Font size="20.0"/>
            </font>
        </Text>
        <Button fx:id="submitButton" layoutX="394.0" layoutY="139.0" mnemonicParsing="false" onAction="#onSubmit"
                prefHeight="26.0" prefWidth="102.0" text="submit" visible="false"/>
    </children>
</AnchorPane>
